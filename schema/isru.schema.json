{
  "$id": "https://raw.githubusercontent.com/ouroboros8/high-frontier-cards/main/schema/isru.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "additionalProperties": false,
  "description": "The card's ISRU rating and platform icons.",
  "properties": {
    "platforms": {
      "description": "An array of platforms icons on the card.",
      "items": {
        "enum": [
          "raygun",
          "buggy",
          "missile"
        ]
      },
      "type": "array"
    },
    "rating": {
      "description": "The ISRU rating.",
      "type": "integer"
    }
  },
  "required": [
    "rating",
    "platforms"
  ],
  "title": "ISRU",
  "type": "object"
}